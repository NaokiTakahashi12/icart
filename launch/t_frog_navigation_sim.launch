<?xml version="1.0"?>

<launch>
  <master auto="start"/>
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find t_frog_navigation)/param/costmap_common_params.yaml" command="load" ns="global_costmap"/>
    <rosparam file="$(find t_frog_navigation)/param/costmap_common_params.yaml" command="load" ns="local_costmap"/>
    <rosparam file="$(find t_frog_navigation)/param/local_costmap_params.yaml" command="load"/>
    <rosparam file="$(find t_frog_navigation)/param/global_costmap_params.yaml" command="load"/>
    <rosparam file="$(find t_frog_navigation)/param/base_local_planner_params.yaml" command="load"/>
  </node>
  <include file="$(find t_frog_gazebo)/launch/t_frog_world.launch"/>
  <include file="$(find t_frog_slam)/launch/hector_slam.launch"/>
</launch>
